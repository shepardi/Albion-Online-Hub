<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Ma+Shan+Zheng&display=swap" rel="stylesheet">

<!-- Content -->
<nav class="navbar">

    <!-- Hamburger Menu -->
    <div class="ham_menu">
        <i class="fa fa-bars" aria-hidden="true"></i>
    </div>

    <!-- Logo + Title -->
    <div class="float-right logo">
        <a href="/">
            <img src="/images/AO_Logo.png" height=100vh alt="Logo">
        </a>

    </div>

    <!-- User Login -->
    <div class="user_menu dropdown">

        <a href="#" class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            <img src="/images/Avatar.png" alt="avatar" height=40>

        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <% if(user){ %>
            <!-- If User: Logout -->
            <form action="/auth/logout?_method=DELETE" method="POST">
                <a class="dropdown-item" href="/account">Account</a>
                <input class="dropdown-item" type="submit" value="Logout" />
            </form>

            <%} else {%>
            <a class="dropdown-item" href="/auth/login">Login</a>
            <a class="dropdown-item" href="/auth/register">Register</a>
            <%}%>
        </div>

    </div>


</nav>